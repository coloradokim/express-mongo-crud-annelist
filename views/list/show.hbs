{{#thePost}}
  <h1>{{title}}</h1>
  <h2>by {{author}}</h2>
  <img src="{{url}}" alt="" />
  <p>{{post}}</p>
  <a href="/list/{{_id}}/edit">Edit Post</a>

  <form action="/list/{{_id}}/delete" method="post">
    <input type="submit" value="Delete Post">
  </form>

  <form action="/list/{{_id}}/" method="post">
    <label for="commentName">Name</label>
    <input type="text" name="commentName" value="">
    <label for="commentText">Comment</label>
    <input type="text" name="commentText" value="">
    <input type="submit" value="Submit Your Comment!">
  </form>
{{/thePost}}
